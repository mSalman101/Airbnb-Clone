<% layout("/layouts/boilerplate") %>


  <body>

    <div class="row mt-3">
        <div class="col-8 offset-2" >
     
    <h3>Create a new listing</h3>

    <form method="POST" action="/listings">
        <div class="mb-3">
            <lable for="title" class="form-label">Title</lable>
      <input
        input
        name="listing[title]"
        placeholder="enter title"
        type="text" class="form-control"
      />
        </div>
    
        <div class="mb-3">
            <lable for="description" class="form-label">Description</lable>
            <br>
            <textarea
            name="listing[description]"
          ></textarea>
        </div>

     
      <div class="mb-3">
        <lable for="image" class="form-control ">Image Link</lable>
        <input
        name="listing[image.url]"
        placeholder="enter image url"
        type="text"
        value="https://plus.unsplash.com/premium_photo-1738091397333-48f0e514b467?q=80&w=1887&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
      />        
      </div>
      
      <div class="row">
        <div class="mb-3 col-md-4">
            <lable for="price" class="form-control ">Price</lable>
            <input name="listing[price]" 
            placeholder="enter price" 
            type="number"
            value="1200"
             />

          </div>
    
          <div class="mb-3 col-md-8">
            <lable for="country" class="form-control ">Country name</lable>
            <input name="listing[country]" placeholder="enter country" type="text" />
          </div>
      </div>
     
      <div class="mb-3">
        <lable for="location" class="form-control ">Location</lable>
        <input
        name="listing[location]"
        placeholder="enter location"
        type="text"
      />
      </div>
      
     
      <button class="btn btn-dark add-btn mt-3">Add</button>
     
    </form>
</div>
</div>
  </body>
</html>
