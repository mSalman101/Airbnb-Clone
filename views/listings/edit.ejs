<% layout("/layouts/boilerplate") %>


  <body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
           
    <h3>Edit the listing</h3>
    <form method="POST" action="/listings/<%= listing._id%>?_method=PUT">
        <div class="mb-3"> 
            <lable for="title" class="form-label ">Title</lable>
            <input name="listing[title]" value="<%= listing.title%>" type="text" class="form-control" />
        </div>
      
        <div class="mb-3"> 
            <lable for="description" class="form-label ">Description</lable>
      <textarea name="listing[description]" class="form-control"><%=listing.description%></textarea></div>
    
      <div class="mb-3">
        <lable for="image.url" class="form-label ">Image</lable>
        <input
        type="text"
        name="listing[image.url]"
        class="form-control"
        value="<%=listing.image.url%>"
      />
      </div>
     
      <div class="row">
        <div class="mb-3 col-md-4" >
            <lable for="price" class="form-label ">Price</lable>
          <input type="number" name="listing[price]" class="form-control" value="<%=listing.price%>" />
        </div>
        <div class="mb-3 col-md-8">
            <lable for="country" class="form-label ">Country</lable>
          <input class="form-control " name="listing[country]" value="<%=listing.country%>" />
        </div>
      </div>
      
    
    <div class="mb-3">
        <lable for="location" class="form-label ">Location</lable>
        <input class="form-control " name="listing[location]" value="<%=listing.location%>" />
    </div>
     
      <button class="btn btn-dark edit-btn mt-3 ">Edit</button>
    </div>
</div>
    </form>
  </body>
</html>
